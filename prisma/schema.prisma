generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id         String      @id @default(cuid())
  name       String
  users      User[]
  patients   Patient[]
  hces       HCE[]
  evolutions Evolution[]
  adjuntos   AdjuntoClinico[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model User {
  id        String   @id @default(cuid())
  doctorId  String
  doctor    Doctor   @relation(fields: [doctorId], references: [id], onDelete: Restrict)

  email     String
  name      String
  password  String
  isActive  Boolean  @default(true)

  roles     UserRole[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([doctorId, email])
  @@index([doctorId])
}

model Role {
  id        String   @id @default(cuid())
  key       String   @unique
  name      String
  users     UserRole[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserRole {
  userId    String
  roleId    String
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role @relation(fields: [roleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([userId, roleId])
  @@index([roleId])
}

model Patient {
  id                 String   @id @default(cuid())
  doctorId           String
  doctor             Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  nombres            String
  apellidos          String
  documentoIdentidad String
  fechaNacimiento    DateTime

  telefono           String?
  email              String?
  direccion          String?

  activo             Boolean  @default(true)

  hces               HCE[]

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([doctorId])
}

model HCE {
  id              String   @id @default(cuid())

  doctorId        String
  doctor          Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  patientId       String
  patient         Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)

  motivoConsulta  String?
  antecedentes    String?
  diagnostico     String?
  tratamiento     String?

  evolutions      Evolution[]
  adjuntos        AdjuntoClinico[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([doctorId])
  @@index([patientId])
}

model Evolution {
  id          String   @id @default(cuid())

  doctorId    String
  doctor      Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  hceId       String
  hce         HCE      @relation(fields: [hceId], references: [id], onDelete: Cascade)

  notaClinica String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([doctorId])
  @@index([hceId])
}

model AdjuntoClinico {
  id          String   @id @default(cuid())

  doctorId    String
  doctor      Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  hceId       String
  hce         HCE      @relation(fields: [hceId], references: [id], onDelete: Cascade)

  nombre      String
  tipo        String
  url         String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([doctorId])
  @@index([hceId])
}